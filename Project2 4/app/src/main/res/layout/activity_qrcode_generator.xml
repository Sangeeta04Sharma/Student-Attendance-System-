<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.user.project2.QRCodeGenerator">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="QR code Generator"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"/>

        <LinearLayout
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Spinner
            android:background="#ffffff"
            android:id="@+id/spinner_year_generate_qr_code"
            android:layout_marginHorizontal="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
        </Spinner>

            <Spinner
                android:background="#ffffff"
                android:id="@+id/spinner_branch_generate_qr_code"
                android:layout_marginHorizontal="15dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <Spinner
                android:background="#ffffff"
                android:id="@+id/spinner_sem_generate_qr_code"
                android:layout_marginHorizontal="15dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/genbtn"
            android:layout_gravity="center"
            android:background="@color/white"
            android:layout_marginTop="30dp"
            android:text="  Generate  "
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="25dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#9eede8"
            android:layout_margin="40dp"
            android:layout_below="@id/genbtn">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/img"/>
        </LinearLayout>
</LinearLayout>
</RelativeLayout>
